{
  "name": "dev-a-day",
  "version": "0.0.0",
  "scripts": {
    "build:ssr": "yarn build:client-and-server-bundles && yarn webpack:server",
    "build:ssr:prod": "yarn build:client-and-server-bundles:prod && yarn webpack:server",
    "serve:ssr": "node dist/server.js",
    "build:ci": "yarn build:ssr:prod && pm2 restart dev-a-day && yarn cloudflare",
    "build:client-and-server-bundles": "ng build --prod && ng run dev-a-day:server",
    "build:client-and-server-bundles:prod": "ng build --prod && ng run dev-a-day:server:production",
    "webpack:server": "webpack --config webpack.server.config.js --progress --colors",
    "dev": "yarn build:ssr && yarn serve:ssr",
    "start": "ng serve",
    "open": "ng serve --open",
    "cloudflare": "node cloudflare",
    "tweet": "ts-node -P twitter/tsconfig.json --files twitter/index.ts",
    "reading-time": "ts-node -P reading-time/tsconfig.json --files reading-time/index.ts && prettier --write articles/*.ts",
    "build": "ng build",
    "build:prod": "ng build --prod",
    "build:deploy": "ng build --prod --base-href \"https://blog.aaronross.tech/\"",
    "deploy": "yarn build:deploy && yarn cloudflare && yarn tweet",
    "deploy:ssr": "yarn build:ci && yarn tweet",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "ng lint"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "~7.2.0",
    "@angular/common": "~7.2.0",
    "@angular/compiler": "~7.2.0",
    "@angular/core": "~7.2.0",
    "@angular/forms": "~7.2.0",
    "@angular/http": "^7.2.4",
    "@angular/platform-browser": "~7.2.0",
    "@angular/platform-browser-dynamic": "~7.2.0",
    "@angular/platform-server": "^7.2.4",
    "@angular/router": "~7.2.0",
    "@nguniversal/express-engine": "^7.1.0",
    "@nguniversal/module-map-ngfactory-loader": "^7.1.0",
    "core-js": "^2.5.4",
    "date-fns": "^2.0.0-alpha.27",
    "express": "^4.16.4",
    "feather-icons": "^4.16.0",
    "jquery": "^3.3.1",
    "ngx-markdown": "^7.1.4",
    "normalize.css": "^8.0.1",
    "prismjs": "^1.15.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "~6.3.3",
    "slugify": "^1.3.4",
    "ts-loader": "^5.3.3",
    "tslib": "^1.9.0",
    "webpack-cli": "^3.2.3",
    "zone.js": "^0.8.29"
  },
  "devDependencies": {
    "@angular-builders/custom-webpack": "^7.3.1",
    "@angular-builders/dev-server": "^7.2.1",
    "@angular-devkit/build-angular": "^0.13.0",
    "@angular/cli": "~7.3.0",
    "@angular/compiler-cli": "~7.2.0",
    "@angular/language-service": "~7.2.0",
    "@types/jest": "^23.3.13",
    "@types/node": "~8.9.4",
    "bytes": "^3.1.0",
    "dotenv": "^6.2.0",
    "got": "^9.6.0",
    "jest": "^24.0.0",
    "jest-preset-angular": "^6.0.2",
    "prettier": "^1.16.3",
    "raw-loader": "^1.0.0",
    "reading-time": "^1.1.3",
    "ts-node": "^8.0.2",
    "tslint": "~5.11.0",
    "twitter": "^1.7.1",
    "typescript": "~3.2.2"
  },
  "jest": {
    "preset": "jest-preset-angular",
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupJest.ts"
    ]
  }
}
